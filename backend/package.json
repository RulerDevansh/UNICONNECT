{
  "name": "uniconnect-backend",
  "version": "1.0.0",
  "description": "UniConnect backend API with Express, MongoDB, Socket.IO, and moderation integrations.",
  "main": "src/server.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "lint": "eslint \"src/**/*.js\"",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "seed": "node src/seed/seed.js"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.8.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.3",
    "multer": "^2.0.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.10",
    "socket.io": "^4.7.5",
    "uuid": "^9.0.1",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^9.14.0",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.2",
    "supertest": "^7.1.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/jest.setup.js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/node_modules"
    ],
    "testMatch": [
      "**/src/tests/**/*.test.js"
    ]
  },
  "overrides": {
    "minimatch": "^10.2.1"
  }
}
